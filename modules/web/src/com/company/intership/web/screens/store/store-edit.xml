<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://storeEdit.caption"
        focusComponent="form"
        messagesPack="com.company.intership.web.screens.store">
    <data>
        <instance id="storeDc"
                  class="com.company.intership.entity.Store">
            <view extends="_local">
                <property name="tradeNetwork" view="_minimal">
                    <property name="fullName"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="storeDc">
            <column width="350px">
                <textField id="numberField" property="number"/>
                <textField id="nameField" property="name"/>
                <pickerField id="tradeNetworkField" property="tradeNetwork">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
        <tabSheet>
            <tab id="networkTab" caption="Торговая сеть">
                <form id="networkForm" dataContainer="storeDc"> <!-- Форма для данных о торговой сети -->
                    <column width="350px">
                        <textField id="tradeNetworkNameField" property="tradeNetwork.name"/>
                        <textField id="tradeNetworkFullNameField" property="tradeNetwork.fullName"/>
                    </column>
                </form>
            </tab>
        </tabSheet>
    </layout>
</window>
